<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:typer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_concept_url"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dhruv.sentimentanalysis.conceptURL">

    <cn.refactor.typer.TyperEditText
        android:id="@+id/edt_input"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="32dp"
        android:hint="Enter URL TO Analyze Language"
        typer:characterWriteInterval="200"
        typer:punctuationWriteInterval="600"
        typer:touchable="true" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btn_getConcept"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edt_input"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="#7ab800"
        fancy:fb_radius="30dp"
        fancy:fb_text="   Get Language Of Text   "
        fancy:fb_textColor="#FFFFFF" />


    <TextView
        android:id="@+id/res2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/res3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/res4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/res1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="29dp"
        android:fontFamily="monospace"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="  Language In The WebPage :"
        android:textSize="24dp"
        android:textStyle="bold" />
</RelativeLayout>
